    /* css */
    .top, .middle, .bottom{
        margin:0;
        height: 150px;
        width:150px;
        text-align:center;
        }
    
        .top{
            background-color:red;
            color:white;
            position: relative;
            top:10px;
            left:10px;
            /* 重なりの優先度を決められる */
            z-index:20;
        }
        .middle{
            background-color:yellow;
            color:black;
            position: absolute;
            top: 50px;
            left:50px;
            z-index:10;
        }
        .bottom{
            background-color:lightblue;
            color:black;
            position: absolute;
            top:90px;
            left:90px;
            z-index:30;
        }
    
